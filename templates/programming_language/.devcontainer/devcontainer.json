{
	"name": "language",
	"build": {
		"dockerfile": "../Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-python.black-formatter",
				"ms-python.debugpy",
				"ms-python.mypy-type-checker"
			],
			"settings": {}
		}
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/python,type=bind,consistency=delegated",
	"workspaceFolder": "/python"
}